<UserControl x:Class="BasicEUSynthFactory.OscillatorPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:auc="clr-namespace:BasicAudioControls;assembly=BasicAudioControls"
             mc:Ignorable="d" 
             d:DesignHeight="220" d:DesignWidth="180" HorizontalAlignment="Center">
    <Canvas >
        <Rectangle Name="BaseRect"  Height="220" Width="180" Fill="#ffa0a010"></Rectangle>
        <auc:BasicSlider Name="OutputLevel" Label="Output Level" Canvas.Top="80" Canvas.Left="5"></auc:BasicSlider>
        <auc:WaveButton Canvas.Top="5" Canvas.Left="5"></auc:WaveButton>
        <Label Canvas.Left="5" Canvas.Top="40" Foreground="Aqua">Oscillator Waveform</Label>
    </Canvas>
</UserControl>